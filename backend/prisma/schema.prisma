// =====================================================
//  Ascent Platform Prisma Schema
// =====================================================

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

// ---------------- Enums ----------------
enum BlogDomain {
  AI
  ML
  Cyber
  DevOps
  Blockchain
  Cloud
  General
}

// ---------------- Models ----------------
model User {
  id           Int               @id @default(autoincrement())
  userId       String            @unique                      // ✅ External user identifier (used across Kafka & frontend)
  email        String            @unique
  password     String
  name         String
  phase        String            @default("1")
  githubId     String?           @unique
  githubToken  String?

  // Relationships
  blogs        Blog[]            @relation("UserBlogs")
  interactions BlogInteraction[] @relation("UserInteractions")
  skills       Skill[]
  achievements Achievement[]

  createdAt    DateTime          @default(now())
  updatedAt    DateTime          @updatedAt
}

model Blog {
  id        Int        @id @default(autoincrement())
  title     String
  content   String
  topic     BlogDomain @default(General)

  author    User?       @relation("UserBlogs", fields: [authorId], references: [id])
  authorId  Int?

  createdAt DateTime    @default(now())
}

model BlogInteraction {
  id          Int      @id @default(autoincrement())
  blogTitle   String
  interested  Boolean
  domain      String
  // ✅ Updated relationship: link by `userId` (string field) instead of numeric `id`
  user        User?    @relation("UserInteractions", fields: [userRefId], references: [userId])
  userRefId   String?                                   // renamed from userId → userRefId for clarity
  createdAt   DateTime @default(now())
}

model Skill {
  id        Int      @id @default(autoincrement())
  name      String
  level     String?  // beginner, intermediate, advanced

  user      User?    @relation(fields: [userId], references: [id])
  userId    Int?

  createdAt DateTime @default(now())
}

model Achievement {
  id          Int      @id @default(autoincrement())
  title       String
  description String?
  user        User?    @relation(fields: [userId], references: [id])
  userId      Int?

  createdAt   DateTime @default(now())
}
